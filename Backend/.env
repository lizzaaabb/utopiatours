# Server Configuration
NODE_ENV=development
PORT=8000

# Payze.io Configuration
# Set to 'production' when ready to go live
PAYZE_ENV=sandbox

# Get these from your Payze.io dashboard
PAYZE_API_KEY=your_payze_api_key_here
PAYZE_SECRET_KEY=your_payze_secret_key_here
PAYZE_MERCHANT_ID=your_merchant_id_here
PAYZE_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Database Configuration (if you're using one)
# DATABASE_URL=your_database_connection_string

# Optional: Email Service Configuration (for sending confirmations)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email_username
# SMTP_PASS=your_email_password